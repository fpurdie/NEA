# Classes below are created by me
window = tk.Tk()
connection = sqlite3.connect('C:/Users/finla/Desktop/myworkoutpal.db')
cursor = connection.cursor()
customtkinter.set_appearance_mode("Light")
window.title("MyWorkoutPal")
# window.overrideredirect(True)
window.geometry("400x700")
window.resizable(False, False)
window.configure(bg='#00FFFF')

wipeusers = "DELETE FROM user;"


# class for my custom build frames.
class DashboardCustomTKframe(customtkinter.CTkFrame):
    def __init__(self, master, width=350, height=150, corner_radius=10, fg_color="white",
                 bg_color="white"):
        super().__init__(master)
        self.configure(width=width, height=height, corner_radius=corner_radius,
                       fg_color=fg_color, bg_color=bg_color)


# this is used when a button servers no use
def onclick():
    print("This is used when a button has no purpose, \nlike pressing a tooltip button which is already pressed.")


# class for my custom build buttons.
class DashboardCustomTKbutton(customtkinter.CTkButton):
    def __init__(self, master, width=150, height=150,
                 fg_color="white", text="", command=onclick, text_color="black",
                 border_width=2, corner_radius=8, bg_color="#00FFFF",
                 image=None, hover_color="grey",
                 hover=True, *args, **kwargs):
        super().__init__(master, width=width, height=height,
                         fg_color=fg_color, hover_color=hover_color,
                         hover=hover, text=text, command=command,
                         border_width=border_width, bg_color=bg_color,
                         corner_radius=corner_radius, text_color=text_color,
                         image=image)


# checking a password
def passwordcheck(password):
    if len(password) < 8:
        error = 1
        return error
        # raise sqlite3.IntegrityError('Password must be over 8 characters long.')
    elif not re.search(r"[a-z]", password):
        error = 1
        return error
        # raise sqlite3.IntegrityError('Password must have at least 1 lowercase character.')
    elif not re.search(r"[A-Z]", password):
        error = 1
        return error
        # raise sqlite3.IntegrityError('Password must have at least 1 uppercase character.')
    elif not re.search(r"\d", password):
        error = 1
        return error
        # raise sqlite3.IntegrityError('Password must have at least 1 number.')
    elif not re.search(r"[^a-zA-Z0-9]", password):
        error = 1
        return error
        # raise sqlite3.IntegrityError('Password must have at least 1 special character.')
    else:
        return 0


# used to exit program.
def quitprogram():
    quit()


# will be used to open dashboard
def initialisedashboard():
    # hiding frames from other pages
    # initialising frames
    # Naming convention: [the page name][description of frame/button]
    # dashboard page frame
    global dashboardframe
    dashboardframe = DashboardCustomTKframe(master=window, width=400, height=700,
                                            corner_radius=0, fg_color="#00FFFF",
                                            bg_color="#00FFFF")
    dashboardframe.pack()

    # dashboard user icon frame
    dashboardusericonframe = DashboardCustomTKframe(master=dashboardframe, width=45, height=40,
                                                    corner_radius=10, fg_color="#00FFFF",
                                                    bg_color="#00FFFF")
    dashboardusericonframe.place(relx=0.9, rely=0.035, anchor=NE)

    # dashboard user icon
    dashboardusericon = DashboardCustomTKbutton(master=dashboardusericonframe,
                                                width=40, height=40, image=usericonimage,
                                                fg_color="white", corner_radius=6,
                                                command=dashboardtologin,
                                                border_width=2, hover=True)
    dashboardusericon.place(relx=0, rely=0)

    # dashboard quit program frame
    dashboardquiticonframe = DashboardCustomTKframe(master=dashboardframe, width=45, height=40,
                                                    corner_radius=10, fg_color="#00FFFF",
                                                    bg_color="#00FFFF")
    dashboardquiticonframe.place(relx=0.1, rely=0.035, anchor=NW)

    # dashboard quit program icon
    dashboardquiticon = DashboardCustomTKbutton(master=dashboardquiticonframe,
                                                width=40, height=40, image=quiticonimage,
                                                fg_color="white", corner_radius=6,
                                                command=quitprogram,
                                                border_width=2, hover=True)
    dashboardquiticon.place(relx=0, rely=0)

    # dashboard title frame
    dashboardtextframe = DashboardCustomTKframe(master=dashboardframe, width=155, height=45,
                                                corner_radius=10, fg_color="white",
                                                bg_color="#00FFFF")
    dashboardtextframe.place(relx=0.5, rely=0.03, anchor=N)
    # dashboard title text
    dashboardtitletext = customtkinter.CTkLabel(master=dashboardtextframe,
                                                text="WorkoutPal",
                                                text_color="black",
                                                width=120,
                                                height=25,
                                                font=customtkinter.CTkFont(family="Meiryo UI",
                                                                           weight="bold",
                                                                           size=22),
                                                corner_radius=8)

    dashboardtitletext.place(relx=0.5, rely=0.5, anchor=CENTER)

    # dashboard view stats frame
    dashboardviewstatsframe = DashboardCustomTKframe(master=dashboardframe, width=350, height=150,
                                                     corner_radius=10, fg_color="white",
                                                     bg_color="#00FFFF")
    dashboardviewstatsframe.place(relx=0.5, rely=0.13, anchor=N)

    # dashboard view stats button
    dashboardviewstatsbutton = DashboardCustomTKbutton(master=dashboardviewstatsframe,
                                                       width=20, height=22, image=statsataglanceimage,
                                                       fg_color="#00FFFF", corner_radius=8, command=onclick,
                                                       border_width=0, hover=False, bg_color="#00FFFF")
    dashboardviewstatsbutton.pack()

    # dashboard view saved recipes frame
    dashboardviewsavedrecipesframe = DashboardCustomTKframe(master=dashboardframe, width=350, height=150,
                                                            corner_radius=10, fg_color="white",
                                                            bg_color="#00FFFF")
    dashboardviewsavedrecipesframe.place(relx=0.5, rely=0.385, anchor=N)

    # dashboard view saved recipes button
    dashboardviewsavedrecipesbutton = DashboardCustomTKbutton(master=dashboardviewsavedrecipesframe,
                                                              width=20, height=22, image=savedrecipesimage,
                                                              fg_color="#00FFFF", corner_radius=8, command=onclick,
                                                              border_width=0, hover=False, bg_color="#00FFFF")
    dashboardviewsavedrecipesbutton.pack()

    # dashboard view suggested workouts frame
    dashboardviewsuggestedworkoutsframe = DashboardCustomTKframe(master=dashboardframe, width=350, height=150,
                                                                 corner_radius=10, fg_color="white",
                                                                 bg_color="#00FFFF")
    dashboardviewsuggestedworkoutsframe.place(relx=0.5, rely=0.65, anchor=N)

    # dashboard view suggested workout button
    dashboardviewsuggestedworkoutsbutton = DashboardCustomTKbutton(master=dashboardviewsuggestedworkoutsframe,
                                                                   width=20, height=22, image=suggestedworkoutsimage,
                                                                   fg_color="#00FFFF", corner_radius=8, command=onclick,
                                                                   border_width=0, hover=False, bg_color="#00FFFF")
    dashboardviewsuggestedworkoutsbutton.pack()

    # dashboard bottom frame
    dashboardbottomframe = DashboardCustomTKframe(master=dashboardframe, width=400, height=80,
                                                  corner_radius=10, fg_color="white",
                                                  bg_color="#00FFFF")
    dashboardbottomframe.place(relx=0.5, rely=0.96, anchor=CENTER)

    # dashboard toolbar frames
    # workout icon to take to work out section
    dashboardworkoutframe = DashboardCustomTKframe(master=dashboardbottomframe,
                                                   width=70, height=70,
                                                   corner_radius=10, fg_color="white",
                                                   bg_color="white")
    dashboardworkoutframe.place(relx=0.08, rely=0.1)

    # the button to take you to wokrout section
    dashboardworkoutbutton = DashboardCustomTKbutton(master=dashboardworkoutframe,
                                                     width=50, height=50, image=workoutsimage,
                                                     fg_color="white", corner_radius=6,
                                                     command=dashboardtoworkout,
                                                     border_width=2, hover=True,
                                                     bg_color="white")
    dashboardworkoutbutton.place(relx=0, rely=0)

    # dashboard icon used to return to dashboard, on by default.
    dashboarddashboardframe = DashboardCustomTKframe(master=dashboardbottomframe,
                                                     width=70, height=70,
                                                     corner_radius=10, fg_color="#00FFFF",
                                                     bg_color="white")
    dashboarddashboardframe.place(relx=0.42, rely=0.1)

    # the button to return to dashboard
    dashboarddashboardbutton = DashboardCustomTKbutton(master=dashboarddashboardframe,
                                                       width=70, height=70,
                                                       image=dashboardimageclicked,
                                                       fg_color="white", corner_radius=6,
                                                       command=onclick,
                                                       border_width=2, hover=True,
                                                       bg_color="white")
    dashboarddashboardbutton.place(relx=0, rely=0)

    # health icon button frame
    dashboardhealthframe = DashboardCustomTKframe(master=dashboardbottomframe,
                                                  width=70, height=70,
                                                  corner_radius=10, fg_color="#00FFFF",
                                                  bg_color="white")
    dashboardhealthframe.place(relx=0.75, rely=0.1)

    # health button to take to health section
    dashboardhealthbutton = DashboardCustomTKbutton(master=dashboardhealthframe,
                                                    width=70, height=70,
                                                    image=healthimage,
                                                    fg_color="white", corner_radius=6,
                                                    command=dashboardtohealth,
                                                    border_width=2, hover=True,
                                                    bg_color="white")
    dashboardhealthbutton.place(relx=0, rely=0)

    window.mainloop()


# will be used to open the workouts page.
def initialiseworkouts():

    # initialising frames
    # Naming convention: [the page name][description of frame/button]

    # the workout window frame
    global workoutframe
    workoutframe = DashboardCustomTKframe(master=window, width=400, height=700,
                                          corner_radius=0, fg_color="#00FFFF",
                                          bg_color="#00FFFF")
    workoutframe.pack()

    # the main frame for the workout page
    workoutmainframe = DashboardCustomTKframe(master=workoutframe, width=400, height=700,
                                              corner_radius=0, fg_color="#00FFFF",
                                              bg_color="#00FFFF")
    workoutmainframe.pack()

    # workouts title frame
    workoutstextframe = DashboardCustomTKframe(master=workoutmainframe, width=155, height=45,
                                               corner_radius=10, fg_color="white",
                                               bg_color="#00FFFF")
    workoutstextframe.place(relx=0.5, rely=0.02, anchor=N)
    # dashboard title text
    workoutstitletext = customtkinter.CTkLabel(master=workoutstextframe,
                                               text="WorkoutPal",
                                               text_color="black",
                                               width=120,
                                               height=25,
                                               font=customtkinter.CTkFont(family="Meiryo UI",
                                                                          weight="bold",
                                                                          size=22),
                                               corner_radius=8)

    workoutstitletext.place(relx=0.5, rely=0.5, anchor=CENTER)

    # Quit button in the top left
    # DashboardQuitIconFrame = DashboardCustomTKframe(master=WorkoutFrame, width=45, height=40,
    #                                                 corner_radius=10, fg_color="#00FFFF",
    #                                                 bg_color="#00FFFF")
    # DashboardQuitIconFrame.place(relx=0.03, rely=0.023, anchor=NW)
    #
    # # workout quit program icon
    # DashboardQuitIcon = DashboardCustomTKbutton(master=DashboardQuitIconFrame,
    #                                             width=40, height=40, image=quiticonimage,
    #                                             fg_color="white", corner_radius=6,
    #                                             command=quitprogram,
    #                                             border_width=2, hover=True)
    # DashboardQuitIcon.place(relx=0, rely=0)

    # Workout View all workouts frame
    workoutviewallworkoutsframe = DashboardCustomTKframe(master=workoutmainframe, width=350, height=250,
                                                         corner_radius=10, fg_color="white",
                                                         bg_color="#00FFFF")
    workoutviewallworkoutsframe.place(relx=0.5, rely=0.1, anchor=N)

    # Workout View all workouts button
    workoutviewallworkoutsbutton = DashboardCustomTKbutton(master=workoutviewallworkoutsframe,
