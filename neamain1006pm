        onerecipetextnutriton.pack()

        # the frame for the ingredients
        onerecipetextingredientsframe = DashboardCustomTKframe(master=onerecipeframe,
                                                               width=20, height=40,
                                                               corner_radius=10, fg_color="White",
                                                               bg_color="#00FFFF")
        onerecipetextingredientsframe.place(relx=0.15, rely=0.23)

        # the text for the ingredients
        onerecipetextingredients = customtkinter.CTkLabel(master=onerecipetextingredientsframe, width=30,
                                                          height=30,
                                                          text="1 tbsp rapeseed oil\n"
                                                               "1 onion, finely chopped\n"
                                                               "2 carrots, finely diced\n"
                                                               "2 celery sticks, finely diced\n"
                                                               "2 garlic cloves, thinly sliced\n"
                                                               "500g carton tomato passata\n"
                                                               "2 tbsp chopped parsley\n"
                                                               "\nFor the meatballs\n"
                                                               "400g lean mince turkey\n"
                                                               "4 tbsp porridge oats\n"
                                                               "pinch paprika\n"
                                                               "1 garlic clove, crushed\n"
                                                               "spray of oil")
        onerecipetextingredients.pack()

        onerecipetextmethodframe = DashboardCustomTKframe(master=onerecipeframe,
                                                          width=20, height=40,
                                                          corner_radius=10, fg_color="White",
                                                          bg_color="#00FFFF")
        onerecipetextmethodframe.place(relx=0.14, rely=0.54)

        # the text for the ingredients
        onerecipetextmethod = customtkinter.CTkLabel(master=onerecipetextmethodframe, width=30,
                                                     height=30, text="Step 1 Heat the slow cooker\n"
                                                                     "Heat the oil in a non-stick frying pan and add:\n"
                                                                     "onion, carrots, celery and garlic. fry for a minute.\n"
                                                                     "Pour in the passata, add the parsley and stir,\n"
                                                                     "then transfer the lot to the slow cooker.\n"

                                                                     "\nStep 2 To make the meatballs\n"
                                                                     "tip the mince into a large bowl, then add the:\n"
                                                                     "oats, paprika, garlic and plenty of black pepper.\n"
                                                                     "Mix everything together.\n"
                                                                     "Divide the mixture into 20 lumps,\n"
                                                                     "and roll each piece into a meatball.\n"
                                                                     
                                                                     "\nStep 3 Cooking the meatballs \n"
                                                                     "Spray or run a non-stick pan with a little oil\n"
                                                                     "Cook the meatballs with oil until they start to brown.\n"
                                                                     "Add them to the tomato base and cook on Low for 5 hours\n"
                                                                     "Serve over rice or pasta if you like")
        onerecipetextmethod.pack()

