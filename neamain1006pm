                                                            height=40, corner_radius=10,
                                                            fg_color="#00FFFF",
                                                            bg_color="#00FFFF")
        backtoallrecipesarrowframe.place(relx=0.05, rely=0.005)

        # the back arrow on the all recipes frame
        backtoallrecipesarrow = DashboardCustomTKbutton(master=backtoallrecipesarrowframe,
                                                        width=40, height=40, image=backarrowimage,
                                                        fg_color="white", corner_radius=6,
                                                        command=onerecipetoall,
                                                        border_width=2, hover=True)
        backtoallrecipesarrow.place(relx=0, rely=0)

        # the frame for the image of the food
