    # Workout View suggested workouts frame
    workoutviewsuggestedworkoutsframe = DashboardCustomTKframe(master=workoutmainframe, width=350,
                                                               height=250, corner_radius=10,
                                                               fg_color="white", bg_color="#00FFFF")
    workoutviewsuggestedworkoutsframe.place(relx=0.5, rely=0.5, anchor=N)

    # Workout View suggested workouts button
    workoutviewsuggestedworkoutsbutton = DashboardCustomTKbutton(master=workoutviewsuggestedworkoutsframe,
                                                                 width=20, height=22, image=suggestedworkouts2image,
                                                                 fg_color="#00FFFF", corner_radius=8, command=onclick,
                                                                 border_width=0, hover=False, bg_color="#00FFFF")
    workoutviewsuggestedworkoutsbutton.pack()

    # bottom toolbar for workouts
    workoutbottomframe = DashboardCustomTKframe(master=workoutmainframe, width=400,
                                                height=80, corner_radius=10,
                                                fg_color="white", bg_color="#00FFFF")
    workoutbottomframe.place(relx=0.5, rely=0.96, anchor=CENTER)

    # bottom left frame in bottom frame, highlighted as workout to indicate current tab
    workoutworkoutframe = DashboardCustomTKframe(master=workoutbottomframe, width=70, height=70,
                                                 corner_radius=10, fg_color="white",
                                                 bg_color="white")
    workoutworkoutframe.place(relx=0.08, rely=0.1)

    # workout button on the toolbar, sole purpose is not to do anything only to indicate tab
    workoutworkoutbutton = DashboardCustomTKbutton(master=workoutworkoutframe,
                                                   width=50, height=50,
                                                   image=workoutsimageclicked,
                                                   fg_color="white", corner_radius=6,
                                                   border_width=2, hover=True,
                                                   bg_color="white")
    workoutworkoutbutton.place(relx=0, rely=0)

    # dashboard frame storing icon used to return to dashboard
    workoutdashboardframe = DashboardCustomTKframe(master=workoutbottomframe,
                                                   width=70, height=70,
                                                   corner_radius=10, fg_color="#00FFFF",
                                                   bg_color="white")
    workoutdashboardframe.place(relx=0.42, rely=0.1)

    # dashboard icon used to return to dashboard
    workoutdashboardbutton = DashboardCustomTKbutton(master=workoutdashboardframe,
                                                     width=70, height=70,
