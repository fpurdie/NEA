    workoutdashboardbutton.place(relx=0, rely=0)

    # health frame containing icon to take to health section
    workouthealthframe = DashboardCustomTKframe(master=workoutbottomframe, width=70, height=70,
                                                corner_radius=10, fg_color="#00FFFF",
                                                bg_color="white")
    workouthealthframe.place(relx=0.75, rely=0.1)

    # health icon to take to health section
    workouthealthbutton = DashboardCustomTKbutton(master=workouthealthframe,
                                                  width=70, height=70, image=healthimage,
                                                  fg_color="white", corner_radius=6,
                                                  command=workouttohealth,
                                                  border_width=2, hover=True, bg_color="white")
    workouthealthbutton.place(relx=0, rely=0)

    # will be used to open all workouts
    def intitialiseallworkouts():

        allworkouts = DashboardCustomTKframe(master=workoutmainframe, width=400, height=700,
                                             corner_radius=0, fg_color="#00FFFF",
                                             bg_color="#00FFFF")
        allworkouts.pack()

    window.mainloop()

# will be used to open the health page.
def initialisehealth():

    global healthframe
    # the frame for the health page
    healthframe = DashboardCustomTKframe(master=window, width=400, height=700,
                                         corner_radius=0, fg_color="#00FFFF",
                                         bg_color="#00FFFF")
    healthframe.pack()

    ##############################################

    # the main frame for health where all related frames are mastered
    mainhealthframe = DashboardCustomTKframe(master=healthframe, width=400, height=700,
                                             corner_radius=0, fg_color="#00FFFF",
                                             bg_color="#00FFFF")
    mainhealthframe.pack()

    ################################

    # the frame for the quit icon in top left
    healthquiticonframe = DashboardCustomTKframe(master=mainhealthframe, width=45, height=40,
                                                 corner_radius=10, fg_color="#00FFFF",
                                                 bg_color="#00FFFF")
    healthquiticonframe.place(relx=0.07, rely=0.023, anchor=NW)

    # dashboard quit program icon
    healthquiticon = DashboardCustomTKbutton(master=healthquiticonframe,
                                             width=40, height=40, image=quiticonimage,
                                             fg_color="white", corner_radius=6,
                                             command=quitprogram,
                                             border_width=2, hover=True)
    healthquiticon.place(relx=0, rely=0)

    # health title frame
    healthtextframe = DashboardCustomTKframe(master=mainhealthframe, width=155, height=45,
                                             corner_radius=10, fg_color="white",
                                             bg_color="#00FFFF")
    healthtextframe.place(relx=0.5, rely=0.02, anchor=N)
    # dashboard title text
    healthtitletext = customtkinter.CTkLabel(master=healthtextframe,
                                             text="WorkoutPal",
                                             text_color="black",
                                             width=120,
                                             height=25,
                                             font=customtkinter.CTkFont(family="Meiryo UI",
                                                                        weight="bold",
                                                                        size=22),
                                             corner_radius=8)

    healthtitletext.place(relx=0.5, rely=0.5, anchor=CENTER)

    # Health view stats frame
    healthviewdailystatsframe = DashboardCustomTKframe(master=mainhealthframe, width=350, height=150,
                                                       corner_radius=10, fg_color="white",
                                                       bg_color="#00FFFF")

    healthviewdailystatsframe.place(relx=0.5, rely=0.09, anchor=N)

    # health view stats button
    healthviewdailystatsbutton = DashboardCustomTKbutton(master=healthviewdailystatsframe,
                                                         width=20, height=22, image=viewdailystatsimage,
                                                         fg_color="#00FFFF", corner_radius=8, command=onclick,
                                                         border_width=0, hover=False, bg_color="#00FFFF")
    healthviewdailystatsbutton.pack()

    # health view all recipes frame
    healthviewallrecipesframe = DashboardCustomTKframe(master=mainhealthframe, width=350, height=150,
                                                       corner_radius=10, fg_color="white",
                                                       bg_color="#00FFFF")
    healthviewallrecipesframe.place(relx=0.5, rely=0.36, anchor=N)

    # health view all recipes button
    healthviewallrecipesbutton = DashboardCustomTKbutton(master=healthviewallrecipesframe,
                                                         width=20, height=22, image=viewallrecipesimage,
                                                         fg_color="#00FFFF", corner_radius=8,
                                                         command=healthtorecipes, border_width=0,
                                                         hover=False, bg_color="#00FFFF")
    healthviewallrecipesbutton.pack()

    # health view saved recipes frame
    healthviewsavedrecipesframe = DashboardCustomTKframe(master=mainhealthframe, width=350, height=150,
                                                         corner_radius=10, fg_color="white",
                                                         bg_color="#00FFFF")
    healthviewsavedrecipesframe.place(relx=0.5, rely=0.64, anchor=N)

    # health view all recipes button
    healthviewsavedrecipesbutton = DashboardCustomTKbutton(master=healthviewsavedrecipesframe,
                                                           width=20, height=22, image=manuallylogcalories,
                                                           fg_color="#00FFFF", corner_radius=8, command=onclick,
                                                           border_width=0, hover=False, bg_color="#00FFFF")
    healthviewsavedrecipesbutton.pack()

    # bottom toolbar for workouts
    healthbottomframe = DashboardCustomTKframe(master=mainhealthframe, width=400,
                                               height=80, corner_radius=10,
                                               fg_color="white", bg_color="#00FFFF")
    healthbottomframe.place(relx=0.5, rely=0.96, anchor=CENTER)

    # bottom left frame in bottom frame, highlighted as workout to indicate current tab
    healthworkoutframe = DashboardCustomTKframe(master=healthbottomframe, width=70, height=70,
                                                corner_radius=10, fg_color="white",
                                                bg_color="white")
    healthworkoutframe.place(relx=0.08, rely=0.1)

    # health button on the toolbar, sole purpose is not to do anything only to indicate tab
    healthworkoutbutton = DashboardCustomTKbutton(master=healthworkoutframe,
                                                  width=50, height=50,
                                                  image=workoutsimage,
                                                  command=healthtoworkout,
                                                  fg_color="white", corner_radius=6,
                                                  border_width=2, hover=True,
                                                  bg_color="white")
    healthworkoutbutton.place(relx=0, rely=0)

    # dashboard frame storing icon used to return to dashboard
    healthdashboardframe = DashboardCustomTKframe(master=healthbottomframe,
                                                  width=70, height=70,
                                                  corner_radius=10, fg_color="#00FFFF",
                                                  bg_color="white")
    healthdashboardframe.place(relx=0.42, rely=0.1)

    # dashboard icon used to return to dashboard
    healthdashboardbutton = DashboardCustomTKbutton(master=healthdashboardframe,
                                                    width=70, height=70,
                                                    image=dashboardimage,
                                                    fg_color="white", corner_radius=6,
                                                    command=healthtodashboard,
                                                    border_width=2, hover=True,
                                                    bg_color="white")
    healthdashboardbutton.place(relx=0, rely=0)

    # health frame containing icon to take to health section
    healthhealthframe = DashboardCustomTKframe(master=healthbottomframe, width=70, height=70,
                                               corner_radius=10, fg_color="#00FFFF",
                                               bg_color="white")
    healthhealthframe.place(relx=0.75, rely=0.1)

    # health icon to take to health section
    healthhealthbutton = DashboardCustomTKbutton(master=healthhealthframe,
                                                 width=70, height=70, image=healthimageclicked,
                                                 fg_color="white", corner_radius=6,
                                                 command=onclick,
                                                 border_width=2, hover=True, bg_color="white")
    healthhealthbutton.place(relx=0, rely=0)

    window.mainloop()

# the command to go to all recipes
def initialiseallrecipes():
    # the frame for the health page

    global allrecipesframe
    allrecipesframe = DashboardCustomTKframe(master=window, width=400, height=700,
                                             corner_radius=0, fg_color="#00FFFF",
                                             bg_color="#00FFFF")
    allrecipesframe.pack()

    mainframeallrecipes = DashboardCustomTKframe(master=allrecipesframe, width=400, height=700,
                                                 corner_radius=0, fg_color="#00FFFF",
                                                 bg_color="#00FFFF")
    mainframeallrecipes.pack()

def onerecipetoall():
        onerecipeframe.pack_forget()
        mainframeallrecipes.pack()

    def steakbowlbutton():

        mainframeallrecipes.pack_forget()

        global onerecipeframe
        onerecipeframe = DashboardCustomTKframe(master=allrecipesframe, width=400, height=700,
                                                corner_radius=0, fg_color="#00FFFF",
                                                bg_color="#00FFFF")
        onerecipeframe.pack()

