# class for my custom build frames.
class DashboardCustomTKframe(customtkinter.CTkFrame):
    def __init__(self, master, width=350, height=150, corner_radius=10, fg_color="white",
                 bg_color="white"):
        super().__init__(master)
        self.configure(width=width, height=height, corner_radius=corner_radius,
                       fg_color=fg_color, bg_color=bg_color)


# this is used when a button servers no use
def onclick():
    print("This is used when a button has no purpose, \nlike pressing a tooltip button which is already pressed.")


# class for my custom build buttons.
class DashboardCustomTKbutton(customtkinter.CTkButton):
    def __init__(self, master, width=150, height=150,
                 fg_color="white", text="", command=onclick, text_color="black",
                 border_width=2, corner_radius=8, bg_color="#00FFFF",
                 image=None, hover_color="grey",
                 hover=True, *args, **kwargs):
        super().__init__(master, width=width, height=height,
                         fg_color=fg_color, hover_color=hover_color,
                         hover=hover, text=text, command=command,
                         border_width=border_width, bg_color=bg_color,
                         corner_radius=corner_radius, text_color=text_color,
                         image=image)


# checking a password
def passwordcheck(password):
    if len(password) < 8:
        error = 1
        return error
        # raise sqlite3.IntegrityError('Password must be over 8 characters long.')
    elif not re.search(r"[a-z]", password):
        error = 1
        return error
        # raise sqlite3.IntegrityError('Password must have at least 1 lowercase character.')
    elif not re.search(r"[A-Z]", password):
        error = 1
        return error
        # raise sqlite3.IntegrityError('Password must have at least 1 uppercase character.')
    elif not re.search(r"\d", password):
        error = 1
        return error
        # raise sqlite3.IntegrityError('Password must have at least 1 number.')
    elif not re.search(r"[^a-zA-Z0-9]", password):
        error = 1
        return error
        # raise sqlite3.IntegrityError('Password must have at least 1 special character.')
    else:
        return 0


# used to exit program.
def quitprogram():
    quit()


# will be used to open dashboard
def initialisedashboard():
    # hiding frames from other pages
    # initialising frames
    # Naming convention: [the page name][description of frame/button]
    # dashboard page frame
    global dashboardframe
    dashboardframe = DashboardCustomTKframe(master=window, width=400, height=700,
                                            corner_radius=0, fg_color="#00FFFF",
                                            bg_color="#00FFFF")
    dashboardframe.pack()

    # dashboard user icon frame
    dashboardusericonframe = DashboardCustomTKframe(master=dashboardframe, width=45, height=40,
                                                    corner_radius=10, fg_color="#00FFFF",
                                                    bg_color="#00FFFF")
    dashboardusericonframe.place(relx=0.9, rely=0.035, anchor=NE)

    # dashboard user icon
    dashboardusericon = DashboardCustomTKbutton(master=dashboardusericonframe,
                                                width=40, height=40, image=usericonimage,
                                                fg_color="white", corner_radius=6,
                                                command=dashboardtologin,
                                                border_width=2, hover=True)
    dashboardusericon.place(relx=0, rely=0)

    # dashboard quit program frame
    dashboardquiticonframe = DashboardCustomTKframe(master=dashboardframe, width=45, height=40,
                                                    corner_radius=10, fg_color="#00FFFF",
                                                    bg_color="#00FFFF")
    dashboardquiticonframe.place(relx=0.1, rely=0.035, anchor=NW)

    # dashboard quit program icon
    dashboardquiticon = DashboardCustomTKbutton(master=dashboardquiticonframe,
                                                width=40, height=40, image=quiticonimage,
                                                fg_color="white", corner_radius=6,
                                                command=quitprogram,
                                                border_width=2, hover=True)
    dashboardquiticon.place(relx=0, rely=0)

    # dashboard title frame
    dashboardtextframe = DashboardCustomTKframe(master=dashboardframe, width=155, height=45,
                                                corner_radius=10, fg_color="white",
                                                bg_color="#00FFFF")
    dashboardtextframe.place(relx=0.5, rely=0.03, anchor=N)
    # dashboard title text
    dashboardtitletext = customtkinter.CTkLabel(master=dashboardtextframe,
                                                text="WorkoutPal",
                                                text_color="black",
                                                width=120,
                                                height=25,
                                                font=customtkinter.CTkFont(family="Meiryo UI",
                                                                           weight="bold",
                                                                           size=22),
                                                corner_radius=8)

    dashboardtitletext.place(relx=0.5, rely=0.5, anchor=CENTER)

    # dashboard view stats frame
    dashboardviewstatsframe = DashboardCustomTKframe(master=dashboardframe, width=350, height=150,
                                                     corner_radius=10, fg_color="white",
                                                     bg_color="#00FFFF")
    dashboardviewstatsframe.place(relx=0.5, rely=0.13, anchor=N)

    # dashboard view stats button
    dashboardviewstatsbutton = DashboardCustomTKbutton(master=dashboardviewstatsframe,
