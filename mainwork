    # dashboard view saved recipes frame
    dashboardviewsavedrecipesframe = DashboardCustomTKframe(master=dashboardframe, width=350, height=150,
                                                            corner_radius=10, fg_color="white",
                                                            bg_color="#00FFFF")
    dashboardviewsavedrecipesframe.place(relx=0.5, rely=0.385, anchor=N)

    # dashboard view saved recipes button
    dashboardviewsavedrecipesbutton = DashboardCustomTKbutton(master=dashboardviewsavedrecipesframe,
                                                              width=20, height=22, image=savedrecipesimage,
                                                              fg_color="#00FFFF", corner_radius=8, command=onclick,
                                                              border_width=0, hover=False, bg_color="#00FFFF")
    dashboardviewsavedrecipesbutton.pack()

    # dashboard view suggested workouts frame
    dashboardviewsuggestedworkoutsframe = DashboardCustomTKframe(master=dashboardframe, width=350, height=150,
                                                                 corner_radius=10, fg_color="white",
                                                                 bg_color="#00FFFF")
    dashboardviewsuggestedworkoutsframe.place(relx=0.5, rely=0.65, anchor=N)

    # dashboard view suggested workout button
    dashboardviewsuggestedworkoutsbutton = DashboardCustomTKbutton(master=dashboardviewsuggestedworkoutsframe,
